<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/colorboard_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/purple_round"
            android:id="@+id/purple"
            android:layout_margin="@dimen/colorboard_margin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_round"
            android:id="@+id/pink"
            android:layout_margin="@dimen/colorboard_margin"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round"
            android:id="@+id/red"
            android:layout_margin="@dimen/colorboard_margin"
            />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_round"
            android:id="@+id/orange"
        android:layout_margin="@dimen/colorboard_margin"
        />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_round"
          android:id="@+id/yellow"
        android:layout_margin="@dimen/colorboard_margin"
        />


</LinearLayout>
